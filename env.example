# ATS Resume Analyzer - Environment Configuration
# Copy this file to .env and update the values for your environment

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# For SQLite (development)
# DATABASE_URL=sqlite:///ats_analyzer.db

# For PostgreSQL with Neon.tech (production)
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# For local PostgreSQL (development)
# DATABASE_URL=postgresql://neondb_owner:npg_ZWecn4GKqa8f@ep-mute-wind-adf8e7ta-pooler.c-2.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# For MySQL (production)
# DATABASE_URL=mysql://username:password@localhost:3306/ats_analyzer

# Stripe Configuration (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_MEDIUM_PRICE_ID=price_medium_plan_id_here
STRIPE_PRO_PRICE_ID=price_pro_plan_id_here

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# Admin Configuration
ADMIN_EMAIL=admin@atsanalyzer.com
ADMIN_PASSWORD=change_this_password

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
BCRYPT_LOG_ROUNDS=12

# Application URLs
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000  # If using separate frontend

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_AI_SUGGESTIONS=False  # Set to True when AI integration is ready
ENABLE_MULTI_LANGUAGE=False  # Set to True when multi-language support is ready
ENABLE_ANALYTICS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring and Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
SENTRY_DSN=your_sentry_dsn_here

# Third-party Integrations
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Development/Testing
TESTING=False
MOCK_STRIPE=True  # Set to True for testing without real Stripe
MOCK_EMAIL=True   # Set to True for testing without real email sending




